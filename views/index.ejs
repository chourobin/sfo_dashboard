<!DOCTYPE html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title><%= title %></title>
        <meta name="description" content="">
		<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,700' rel='stylesheet' type='text/css'>
	    <!--[if IE]>
	       <link href="/stylesheets/ie.css" media="screen, projection" rel="stylesheet" type="text/css" />
	    <![endif]-->
		<link href="/stylesheets/print.css" media="print" rel="stylesheet" type="text/css" />
		<link href="/stylesheets/screen.css" media="screen, projection" rel="stylesheet" type="text/css" />
    </head>
    <body>
		<div class="shade">
			<div id="content">
				<section id="header">
					<div class="rectangle pagination_centered">
						<div class="half_circle">
							<img src="/images/icon.png">
						</div><!-- .half_circle -->
						<h1><%= title %></h1>
						<p class="sfo_details"><span class="venue here_now"><%= venue.hereNow.count %></span> people here right now<span class="middledot">&middot;</span><span class="venue users_count"><%= venue.stats.usersCount %></span> people all time</p>
					</div><!-- .rectangle -->
				</section>

				<section id="stats">
					<div class="tile">
						<div class="rating"><span class="venue rating"><%= venue.rating.toFixed() %></span>/10</div>
						<span class="caption">
							Rating
						</span>
					</div><!-- .tile -->
					<div class="tile">
						<div class="venue likes"><%= venue.likes.count %></div>
						<span class="caption">
							Likes
						</span>
					</div><!-- .tile -->
					<div class="tile last">
						<div class="venue tips"><%= venue.tips.count %></div>
						<span class="caption">
							Tips
						</span>
					</div><!-- .tile -->
				</section>

				<section id="photos">
					<div class="rectangle">
						<ul class="photos">
							<% for (var i=0; i<6; i++) { %>
								<li>
									<img src='<%= venue.photos.groups[0].items[i].prefix + '300x300' + venue.photos.groups[0].items[i].suffix %>'>
								</li>
							<% } %>
						</ul>
					</div><!-- .rectangle -->
				</section>

			</div><!-- .content -->

		</div>

		<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
		<script src="//cdnjs.cloudflare.com/ajax/libs/jqueryui/1.10.2/jquery-ui.min.js"></script>
		<script src="/javascripts/sse.js"></script>
    </body>
</html>